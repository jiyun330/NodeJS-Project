<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <style>
      h2{
        text-align: center;
      }
      
    </style>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3">공지</h2>
      <table class="board-table table table-sm border-bottom">

        <thead class="thead-light">
          <tr>
            <th scope="col">번호</th>
            <th scope="col">제목</th>
            <th scope="col" class="writer">작성자</th>
            <th scope="col" class="date">작성일</th>
          </tr>
        </thead>

        <tbody>
          <% if(notice == null || notice.length == 0){ %>
            <tr>
              <td colspan=4 style="text-align: center;"> 공지글이 없습니다. :( </td>
            </tr>
          <% } %>
          <% for(var i = 0; i < notice.length; i++) {%>
            <tr>
              <td>
                <a href="/notice/<%= notice[i]._id %><%= getPostQueryString() %>">
                  <div data-search-highlight="title" class="ellipsis"><%= boards[i].title %></div>
                </a>
              </td>
              <td class="writer">
                <div data-search-highlight="writer" class="ellipsis">
                  <%= notice[i].writer ? notice[i].writer.name : "" %>
                </div>
              </td>
              <td class="date">
                <span data-date="<%= notice[i].regdate %>"></span> 
              </td>
            </tr>
          <% } %>
        </tbody>

      </table>

      <div class="row mb-3">

        <div class="col-2">
          <% if(isAuthenticated){ %>
            <a class="btn btn-primary" href="/notice/new<%= getPostQueryString() %>">글 쓰기</a>
          <% } %>
        </div>

          
        </div>
      </form>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>